                                                <input type="text" value="{{duracion}}" class="form-control" id=""
                                                    name="duracion">
                                            </div>





                                            <div>



                                                <select name="id_tipo_evento" id="" class="form-select">
                                                    <option selected>Tipos</option>

                                                    {{#each tipo_evento}}

                                                    <option value="{{id_tipo_evento}}">{{eventos }}

                                                    </option>
                                                    {{/each}}

                                                </select>



                                            </div>




                                            <div class="form-group">
                                                <label for="nombre_ropa">Precio del evento:</label>
                                                <input type="text" value="{{precio_evento}}" class="form-control" id=""
                                                    name="precio_evento">
                                            </div>


                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger"
                                                    data-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Agregar</button>
                                            </div>
                                    </form>

                                </div>

                            </div>
