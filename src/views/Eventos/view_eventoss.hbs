                                                                                    <label for="nombre_ropa">Duracion
                                                                                        del evento:</label>
                                                                                    <input type="text"
                                                                                        value="{{duracion}}"
                                                                                        class="form-control" id=""
                                                                                        name="duracion">
                                                                                </div>

                                                                                <div class="form-group">
                                                                                    <label for="nombre_ropa">Precio del
                                                                                        evento:</label>
                                                                                    <input type="text"
                                                                                        value="{{precio_evento}}"
                                                                                        class="form-control" id=""
                                                                                        name="precio_evento">
                                                                                </div>


                                                                                <div class="modal-footer">
                                                                                    <button type="button"
                                                                                        class="btn btn-danger"
                                                                                        data-dismiss="modal">Close</button>
                                                                                    <button type="submit"
                                                                                        class="btn btn-primary">Modificar</button>
