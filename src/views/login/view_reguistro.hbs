<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Autos la FET</title>
</head>

<body>
        <a class="btn btn-primary" href="/admin/admin" role="button">Volver</a>

    <div class="container">
        <div class="col-xl-12 col-lg-12">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <center>
                            <h1>Registros de usuarios</h1>
                        </center>
                        <center> <a href="" class="btn btn-block btn-info" data-toggle="modal"
                                data-target="#modificaUsuarios">Agregar</a></center>
                        <div class="modal" id="modificaUsuarios">
                            <div class="modal-dialog">
                                <div class="modal-content">

                                    <form action="/login/agregar" method="post">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Agregar</h4>
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>

                                        <div class="modal-body">

                                            <h5>
                                                <center> Agregar datos </center>
                                            </h5>
                                            <div class="form-group">
                                                <label for="nombre_ropa">Nombre usuario:</label>
                                                <input type="text" value="{{nombre}}" class="form-control" id=""
                                                    name="nombre">
                                            </div>

                                            <div class="form-group">
                                                <label for="nombre_ropa">Apellido del usuario:</label>
                                                <input type="text" value="{{apellidos}}" class="form-control" id=""
                                                    name="apellidos">
                                            </div>

                                            <div>
                                       <label for="nombre_ropa">Rol del usuario:</label>

                                                <select name="id_rol" id="" class="form-select">
                                                    <option selected>Tipos</option>

                                                    {{#each rol}}

                                                    <option value="{{id_rol}}">{{rol }}

                                                    </option>
                                                    {{/each}}

                                                </select>


                                            </div>
                                            <div class="form-group">
                                                <label for="nombre_ropa">email del usuario:</label>
                                                <input type="email" value="{{email}}" class="form-control" id=""
                                                    name="email">
                                            </div>
                                            
                                            <div class="form-group">
                                                <label for="nombre_ropa">passwork:</label>
                                                <input type="text" value="{{pass}}" class="form-control" id=""
                                                    name="pass">
                                            </div>



                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger"
                                                    data-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Agregar</button>
                                            </div>
                                    </form>

                                </div>

                            </div>
                            <tr>
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12 col-md-8 col-lg-8">
                                            <table class="table table-striped table-hover">
                                                <thead>

                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Nombre del usuario</th>
                                                        <th>Apellido del usuairo</th>
                                                        <th>Email del usuairo</th>
                                                        <th>passwork</th>

                                                        <th>rol</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each reguistro}}
                                                    <tr>
                                                        <td scope="row">{{id_usuario}} </td>
                                                        <td>{{nombre}} </td>
                                                        <td>{{apellidos}} </td>
                                                        <td>{{email}} </td>
                                                        <td>{{pass}} </td>
                                                        <td>{{rol}} </td>



                                                        <td>
                                                            <!---   <a href="delete/{{id_ropa}}" class="">Eliminar</a>-->
                                                            <a href="" class="btn btn-danger" data-toggle="modal"
                                                                data-target="#eliminaUsuario{{id_usuario}}">Eliminar</a>
                                                            <div class="modal" id="eliminaUsuario{{id_usuario}}">
                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">

                                                                        <div class="modal-header">
                                                                            <h4 class="modal-title">Seguro quiere
                                                                                Elimiar El Evento </h4>
                                                                            <button type="button" class="close"
                                                                                data-dismiss="modal">&times;</button>
                                                                        </div>

                                                                        <div class="modal-body">
                                                                            {{nombre}}
                                                                            <br>

                                                                        </div>

                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-danger"
                                                                                data-dismiss="modal">Close</button>
                                                                            <a href="Eliminar/{{id_usuario}}"
                                                                                class="btn btn-danger">Eliminar</a>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <a href="" class="btn btn-info" data-toggle="modal"
                                                                data-target="#modificaUsuario{{id_usuario}}">Modificar</a>
                                                            <div class="modal" id="modificaUsuario{{id_usuario}}">
                                                                <div class="modal-dialog">
                                                                    <div class="modal-content">
                                                                        <form action="/login/modificar1/{{id_usuario}}"
                                                                            method="POST">

                                                                            <div class="modal-header">
                                                                                <h4 class="modal-title">Modal Heading
                                                                                </h4>
                                                                                <button type="button" class="close"
                                                                                    data-dismiss="modal">&times;</button>
                                                                            </div>

                                                                            <div class="modal-body">

                                                                    <div class="form-group">
                                                <label for="nombre_ropa">Nombre usuario:</label>
                                                <input type="text" value="{{nombre}}" class="form-control" id=""
                                                    name="nombre">
                                            </div>

                                            <div class="form-group">
                                                <label for="nombre_ropa">Apellido del usuario:</label>
                                                <input type="text" value="{{apellidos}}" class="form-control" id=""
                                                    name="apellidos">
                                            </div>

                                            <div class="form-group">
                                                <label for="nombre_ropa">email del usuario:</label>
                                                <input type="email" value="{{email}}" class="form-control" id=""
                                                    name="email">
                                            </div>
                                            
                                            <div class="form-group">
                                                <label for="nombre_ropa">passwork:</label>
                                                <input type="text" value="{{pass}}" class="form-control" id=""
                                                    name="pass">
                                            </div>



                                                                                <div class="modal-footer">
                                                                                    <button type="button"
                                                                                        class="btn btn-danger"
                                                                                        data-dismiss="modal">Close</button>
                                                                                    <button type="submit"
                                                                                        class="btn btn-primary">Modificar</button>
                                                                                </div>
                                                                        </form>

                                                                    </div>

                                                                </div>
                                                            </div>
                                        </div>



                                        </td>
                            </tr>
                            {{/each}}
                            </tbody>
                </table>
            </div>
        </div>
    </div>

    </div>
    </div>
    </div>
    <script src="assets/js/jquery.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>

</body>
</div>

</html>